// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  price       Float
  description String?
  imageUrl    String
  stock       Stock[]
  Category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
}

model Stock {
  id        String  @id @default(uuid())
  productId String
  size      String?
  amount    Int
  Product   Product @relation(fields: [productId], references: [id])
}

model Category {
  id       String    @id @default(uuid())
  name     String
  products Product[]
}

model Order {
  id          String  @id @default(uuid())
  orderDetail String
  delivery    Boolean
}
